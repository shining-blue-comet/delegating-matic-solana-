{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "react-app"
  ],
  "rules": {
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": 0,
    "quotes": [
      "error",
      "single"
    ],
    "arrow-body-style": [
      2,
      "as-needed"
    ],
    "lines-between-class-members": ["error", "always"] ,
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "no-confusing-arrow": 1,
    "no-console": "warn",
    "no-use-before-define": 1,
    "prefer-template": 2
  }
}
